{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true
  },
  "globals": {
    "chrome": "readonly"
  },
  "extends": ["eslint:recommended", "prettier", "plugin:import/errors", "plugin:import/warnings"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "import/order": [
      "error",
      {
        "alphabetize": {
          "order": "asc"
        }
      }
    ],
    "sort-imports": "off",
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_"
      }
    ]
  }
}
